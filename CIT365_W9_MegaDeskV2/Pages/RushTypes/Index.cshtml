@page
@model MegaDesk.Pages.RushTypes.IndexModel

@{
    ViewData["Title"] = "Rush";
}

<div class="section-banner">
    <h1>Rush Orders</h1>
</div>

<a asp-page="Create"><button id="add">Create New</button></a>


<input type="text" id="megaDeskInput" onkeyup="megaDeskFunction()" placeholder="Search Shipping Type" title="Type in a name">
<table class="table table-hover" id="megaDeskTable">
    <thead class="thead-dark">

        <tr>
            <th onclick="sortTable(0)">
                @Html.DisplayNameFor(model => model.RushType[0].Description)
            </th>
            <th onclick="sortTable(1)">
                @Html.DisplayNameFor(model => model.RushType[0].Tier1Cost)
            </th>
            <th onclick="sortTable(2)">
                @Html.DisplayNameFor(model => model.RushType[0].Tier2Cost)
            </th>
            <th onclick="sortTable(3)">
                @Html.DisplayNameFor(model => model.RushType[0].Tier3Cost)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RushType)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tier1Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tier2Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tier3Cost)
            </td>
            <td>

                <div class="dropdown open">
                    <button class="btn btn-secondary dropdown-toggle"
                            type="button" id="dropdownMenu1" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                        Options
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-page="./Edit" asp-route-Id="@item.Id">Edit</a>
                        <a class="dropdown-item" asp-page="./Details" asp-route-Id="@item.Id">Details</a>
                        <a class="dropdown-item" asp-page="./Delete" asp-route-Id="@item.Id">Delete</a>
                    </div>
                </div>

            </td>
        </tr>
        }
    </tbody>
</table>
